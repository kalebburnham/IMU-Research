  $('.carousel').on('slide.bs.carousel', function (e) {
     var slideFrom = $(this).find('.active').index();
     var slideTo = $(e.relatedTarget).index()-1;
 
    $('.carousel-indicators-icons li').removeClass('active');
    $('.carousel-indicators-icons li[data-slide-to='+slideTo+']').addClass('active');
  })
